@model HiAsgRAS.ViewModel.ApplicationInformationModel

<div class="card">
    <div class="card-header" data-background-color="purple">
        <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
        <i class="fa fa-info-circle" aria-hidden="true"></i> <h4 class="title" style="display: inline;">Application Information</h4>

    </div>
    <div class="card-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>


                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group label-floating">
                            <label class="control-label">Application Name</label>
                            <input type="text" class="form-control" id="txtBAOP" maxlength="100" value="@Model.ApplicationName" disabled>

                        </div>
                    </div>
                  
                    <div class="col-md-4">
                        <div class="form-group label-floating">
                            <label class="control-label">Application Type</label>
                            <input type="text" class="form-control" id="txtBAPE" maxlength="100"
                                    value="@Model.ApplicationType" disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group label-floating">
                            <label class="control-label">Application Information</label>
                            <input type="text" class="form-control" id="txtBAPP" maxlength="20" value="@Model.ApplicationInformation" disabled>
                        </div>
                    </div>
                    
                </div>

                <div class="row">                    
                     <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-group label-floating">
                                <label class="control-label">Comments</label>
                                @Html.TextArea("txtComment", @Model.Comments, new { rows = 10, @class = "form-control TextArea" })
                            </div>
                        </div>
                    </div>
                </div>                
             
              <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-default pull-right" data-dismiss="modal" id="btnCancel ">Cancel</button>
                        <button type="button" class="btn btn-primary pull-right" id="btnAppInfoUpdate" style="visibility:hidden">Update</button>
                    </div>
                </div>


                <div class="clearfix"></div>

                <!--Close div-->
            </div>
        }
    </div>
</div>

