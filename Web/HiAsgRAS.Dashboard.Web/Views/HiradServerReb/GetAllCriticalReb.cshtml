@model IEnumerable<HiAsgRAS.ViewModel.LogStatusByLastRunModel>


<div class="card">
    <div class="card-header" data-background-color="red">
        <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
        <i class="fa fa-bolt" aria-hidden="true"></i> <h4 class="title" style="display:inline;">Reboot Servers List</h4>
    </div>
    <div class="card-content">
        <table class="table table-striped table-bordered table-hover table-condensed table-striped"
               id="hiCriticalReboot" style="width:100%;">
            <thead class="text-rose">
                <tr>
                    <th>System</th>
                    <th>Monitored At</th>
                    <th>Last Boot Time</th>
                    <th>Since in Days</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SystemName</td>
                        <td>@item.MonitoredAt</td>
                        <td>@item.LastBootTime</td>
                        <td>@item.LastBootInDays</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    //Dom Ready
    $(function () {
        $("#hiCriticalReboot").DataTable({
            "order": [[3, "desc"]],
            "pageLength": -1,
            "lengthMenu": [[-1, 10, 20, 50, 100], ["All", 10, 20, 50, 100]],
            "bAutoWidth": true
        });
    });
</script>
