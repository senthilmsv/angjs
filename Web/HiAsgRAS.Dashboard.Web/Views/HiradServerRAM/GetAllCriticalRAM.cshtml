@model IEnumerable<HiAsgRAS.ViewModel.LogStatusByLastRunModel>

<div class="card">
    <div class="card-header" data-background-color="orange">
        <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
        <i class="fa fa-microchip" aria-hidden="true"></i> <h4 class="title" style="display:inline;">Critical RAM</h4>
    </div>
    <div class="card-content">
        <table class="table table-striped table-bordered table-hover table-condensed table-striped" id="hiCriticalRAM" style="width:100%;">
            <thead class="text-rose">
                <tr>
                    <th>System</th>
                    <th>Monitored At</th>
                    <th>Total RAM</th>
                    <th>Free RAM</th>
                    <th>Used in %</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SystemName</td>
                        <td>@item.MonitoredAt</td>
                        <td>@item.RAM</td>
                        <td>@item.AvblRAM</td>
                        <td>@item.RAMPercentage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    //Dom Ready
    $(function () {
        $("#hiCriticalRAM").DataTable({
            "order": [[4, "desc"]],
            "pageLength": -1,
            "lengthMenu": [[-1, 10, 20, 50, 100], ["All", 10, 20, 50, 100]],
            "bAutoWidth": true
        });
    });
</script>