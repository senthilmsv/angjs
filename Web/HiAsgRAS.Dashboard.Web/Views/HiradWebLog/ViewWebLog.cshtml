@model HiAsgRAS.ViewModel.HiradWebModel

<div class="card">
    <div class="card-header" data-background-color="blue">
        <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
        <i class="fa fa-laptop" aria-hidden="true"></i> <h4 class="title" style="display: inline;">Website Logs</h4>
        <div class="category">
            <div class="row">
                <div class="col-xs-3 title">Web Site: @Model.WebFolder
                    <i class="fa fa-info-circle" aria-hidden="true" title="@Model.WebFolder"
                       data-placement="right"
                       data-toggle="popover" data-content="@Model.Description"></i>
                </div>
                <div class="col-xs-4 title">Url: @Model.WebSite</div>
                <div class="col-xs-2 title">ABC ID: @Model.ABCID</div>
                <div class="col-xs-3 title">Db: @Model.DBName</div>
            </div>
            <div class="row">                
                <div class="col-xs-3 title">Business Dept: @Model.BPDept</div>
                <div class="col-xs-3 title" title="Business Primary Contact">
                    Prim.Contact: @Model.BPContact</div>
                <div class="col-xs-3 title">Phone: @Model.BPPhone</div>
                <div class="col-xs-3 title">Email: @Model.BPEmail</div>                
            </div>
            <div class="row">
                <div class="col-xs-3 title"></div>
                <div class="col-xs-3 title" title="Business Secondary Contact">
                    Sec.Contact: @Model.BPContact
                </div>
                <div class="col-xs-3 title">Phone: @Model.BPPhone</div>
                <div class="col-xs-3 title">Email: @Model.BPEmail</div>
            </div>
            <div class="row">
                <div class="col-xs-3 title">Remedy Group: @Model.RemedyGroupName</div>
                <div class="col-xs-3 title" title="Support Group Primary Contact">Prim.Contact: @Model.PrimayContact</div>
                <div class="col-xs-4 title" title="Support Group Secondary Contact">Sec.Contact: @Model.SecondaryContact</div>                
            </div>
        </div>
    </div>
    <div class="card-content">
        <table class="table table-striped table-bordered table-hover table-condensed table-striped"
               id="hiradWebAllLog" style="width:100%;">
            <thead class="text-rose">
                <tr>
                    <th>Id</th>
                    <th>Monitored At</th>
                    <th>Status</th>
                    <th>Error Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.HiradWebLogs)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.MonitoredAt</td>
                        <td>@item.Status</td>
                        <td>@item.ErrorDescription</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    //Dom Ready
    $(function () {
        //$('[data-toggle="tooltip"]').tooltip();
        $('[data-toggle="popover"]').popover();
        

        $('#hiradWebAllLog').dataTable().fnDestroy();
        var table = $("#hiradWebAllLog").DataTable({
            "order": [[0, "desc"]],
            "scrollY": '50vh',
            "scrollCollapse": true,
            "pageLength": -1,
            "lengthMenu": [[-1, 10, 20, 50, 100], ["All", 10, 20, 50, 100]],
            "bAutoWidth": false,
            "aoColumns": [
                { "sWidth": "10px", "bSearchable": false, "visible": false },
                { "sWidth": "181px" },
                { "sWidth": "104px" },
                { "sWidth": "226px" }
            ],
            "fnInitComplete": function () {
                $("#hiradWebAllLog").css("width", "100%");
                $(".dataTables_scrollHead").css("width", "100%");
                $(".dataTables_scrollHeadInner").css("width", "100%");
                $(".dataTables_scrollHeadInner table").css("width", "100%");
            }
        });
        ////Hide multiple columns using redrawCalculations to improve performance
        ////table.columns( [ 0, 1, 2, 3 ] ).visible( false, false );
        //table.columns([0]).visible(false, false);
        //table.columns.adjust().draw(false); // adjust column sizing and redraw
    });
</script>

