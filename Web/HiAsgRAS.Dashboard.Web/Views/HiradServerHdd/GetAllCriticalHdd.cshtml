@model IEnumerable<HiAsgRAS.ViewModel.LogStatusByLastRunModel>

<div class="card">
    <div class="card-header" data-background-color="cyan">
        <button type="button" class="close pull-right" data-dismiss="modal">&times;</button>
        <i class="fa fa-database" aria-hidden="true"></i> <h4 class="title" style="display:inline;">Critical HDD</h4>
    </div>
    <div class="card-content">
        <table class="table table-striped table-bordered table-hover table-condensed table-striped" id="hiCriticalHdd" style="width:100%;">
            <thead class="text-rose">
                <tr>
                    <th>System</th>
                    <th>Monitored At</th>
                    <th>HDD Configuration</th>
                    <th>Available HDD</th>
                    <th>Used %</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SystemName</td>
                        <td>@item.MonitoredAt</td>
                        <td>@item.HDDConfiguration</td>
                        <td>@item.AvblHDDSpace</td>
                        <td>@item.HddPercentage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    //Dom Ready
    $(function () {
        $("#hiCriticalHdd").DataTable({
            "order": [[4, "desc"]],
            "pageLength": -1,
            "lengthMenu": [[-1, 10, 20, 50, 100], ["All", 10, 20, 50, 100]],
            "bAutoWidth": true
        });
    });
</script>