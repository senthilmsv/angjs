    @Scripts.Render("~/bundles/dashboardPageJs")
    @Scripts.Render("~/bundles/appsJs")

    <script>
        //Dom Ready
        $(function () {
            layerInfoCRUD.reset_datatable_state();
            layerInfoCRUD.searchResult();
        });
    </script>
}

