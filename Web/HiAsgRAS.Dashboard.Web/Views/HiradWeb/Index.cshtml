@{
    ViewBag.Title = "";
}

<div class="card">
    <div class="card-header" data-background-color="purple">
        @*<button type="button" class="close pull-right" data-dismiss="modal">&times;</button>*@
        
   @{
            string app = "";
            if (@Session["WebSiteType"].ToString()=="Web")
            {
                app = "Web";
<i class="fa fa-laptop" aria-hidden="true"></i> 
            }
            else
            {
                app = "Sharepoint";
<i class="fa fa-share-alt" aria-hidden="true"></i> 
            }
<h4 class="title" style="display: inline;">@app Apps</h4>
        <button class="btn btn-warning pull-right" type="button" title="Add New Web Apps" id="btnWebAppAdd">
            <i class="glyphicon glyphicon-plus" aria-hidden="true"></i> Add @app App
        </button>
}
    </div>
    <div class="card-content">
        <table class="table table-striped table-bordered table-hover table-condensed table-striped"
               id="hiWebApps" style="width:100%;">
            <thead>
                <tr>
                    <th class="sortingDisabled notExport"></th>
                   @* <th class="notExport"></th>
                    <th class="notExport"></th>*@
                    <th>Web Folder</th>
                    <th>Web Site</th>
                    <th>Web Stat</th>
                    <th>Active</th>
                    <th>Status</th>
                    <th>Remedy Group</th>
                    <th>Primary Support</th>
                    <th>Secondary Support</th>
                    <th>BP Contact</th>
                    <th>BP Dept</th>
                    <th>ABC ID</th>
                    <th>APP Server</th>
                    <th>DB Server</th>                    
                    <th>Production Support Agreement</th>
                    @* <th>Description</th>*@
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
@*<input type="hidden" id="webSiteType" value="@ViewBag.WebSiteType" />*@
<input type="hidden" id="uSearchWebList" value="@Url.Action("SearchWebAppList", "HiradWeb")" />
<input type="hidden" id="uViewWebAppInformation" value="@Url.Action("ViewWebAppInformation", "HiradWeb")" />
<input type="hidden" id="hdnWebAppDeleteUrl" value="@Url.Action("DeleteWebApp", "HiradWeb")" />

@* All the required css for this corresponding page should be added here *@
@section head{
    @Styles.Render("~/Content/dataTablecss")
}


@* All the required js for this corresponding page should be added here  *@
@section scripts{
    @Scripts.Render("~/bundles/dashboardPageJs")
@Scripts.Render("~/bundles/dataTableExportPlugins")
    @Scripts.Render("~/bundles/appsJs")

    <script>
        //Dom Ready
        $(function () {
            hiradWebCRUD.reset_datatable_state();
            hiradWebCRUD.searchResult('Y');
        });
    </script>
}

